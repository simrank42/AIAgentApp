# Core Application Settings
APP_ENV=dev
SECRET_KEY=change-this-in-prod-32-bytes-min
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=http://localhost:4200
DATABASE_URL=sqlite:///./app.db

# Cookie Security
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# AI Configuration
# Options: mock, huggingface, openai
AI_PROVIDER=huggingface
HF_TOKEN=your_huggingface_token_here
HF_MODEL=meta-llama/Llama-3.1-8B-Instruct

# Litestream/R2 Configuration for Database Replication
# Get these from Cloudflare R2 dashboard
LITESTREAM_ACCESS_KEY_ID=your_r2_access_key_here
LITESTREAM_SECRET_ACCESS_KEY=your_r2_secret_key_here
LITESTREAM_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
LITESTREAM_BUCKET=your-bucket-name